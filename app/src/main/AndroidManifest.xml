        <activity android:name=".TaskCreation"
            android:label="@string/title_activity_task_creation"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".WriteMessage"
            android:label="@string/title_activity_write_message"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".TaskGlobal"
            android:label="@string/title_activity_task_global"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".EventCreation"
            android:label="@string/title_activity_event_creation"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".Register" />
        <activity
            android:name=".InvitationList"
            android:label="@string/title_activity_invitation_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".TaskList"
            android:label="@string/title_activity_task_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".TaskItemCreate"
            android:label="@string/title_activity_task_item_create"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
